<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!--    Appenders are responsible for delivering LogEvents to their destination -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c - %m%n"/>
        </Console>

        <File name="File" fileName="file.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c - %m%n"/>
        </File>

        <RollingFile name="RollingFile"
                     fileName="mobile-automation.log"
                     filePattern="mobile-automation-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd hh-mm-ss} [%t] %-5p %c - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="1"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!--        level   weight              -->
        <!--        ALL	    Integer.MAX_VALUE   -->
        <!--        TRACE	600                 -->
        <!--        DEBUG	500                 -->
        <!--        INFO	400                 -->
        <!--        WARN	300   - DEFAULT     -->
        <!--        ERROR	200                 -->
        <!--        FATAL	100                 -->
        <!--        OFF	    0                   -->
        <Logger name="phuoclet.core" level="trace" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Logger name="phuoclet.test" level="trace" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>